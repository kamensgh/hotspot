<!-- events.nunjucks -->
{% set title='Create Event' %}
{% extends "site_base.njk" %}
{% set baseUrl = ".." %}

{% block stylesheet %}
<link href="{{ baseUrl }}/app/dist/styles/create-event.css" rel="stylesheet">


{% endblock %}


{% block content %}

<div class="align-items-end banner smaller d-flex" style="background-image: url('../app/dist/images/68.jpg');">

    <div class="container">
        <h1 class="name">Create Event</h1>
    </div>
    <div class="overlay"></div>
</div>


<div class="container my-5">
        <div class="">
                <h4 class="section-title mb-4">Event Details</h4>
                <form>
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="personal-info">
                                
                                
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Title</label>
                                            <input type="text" class="form-control" id="" aria-describedby="" placeholder="eg. Afrochella">
                                            <small id="nameHelp" class="form-text d-none text-danger">We'll never share your email with anyone else.</small>
                                        </div>
                                        <div class="form-group">
                                                <label for="exampleInputEmail1">Location</label>
                                                <input type="text" class="form-control" id="" aria-describedby="" placeholder="El Wak Sports Stadium">
                                                <small id="nameHelp" class="form-text d-none text-danger">We'll never share your email with anyone else.</small>
                                            </div>
                                            <div class="form-group">
                                                    <label for="exampleInputEmail1">Date</label>
                                                    <input type="text" class="form-control" id="" aria-describedby="" placeholder="MARCH 20, 2019">
                                                    <small id="nameHelp" class="form-text d-none text-danger">We'll never share your email with anyone else.</small>
                                                </div>
            
                                        <div class="row">
                                                <div class="col-6 pl-0">
                                                        <div class="form-group">
                                                                <label for="exampleInputEmail1">Starts</label>
                                                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="3:12">
                                                                <small id="emailHelp" class="form-text d-none text-danger">We'll never share your email with anyone else.</small>
                                                            </div>
                                                </div>
                                                <div class="col-6 pr-0">
                                                        <div class="form-group">
                                                                <label for="exampleInputEmail1">Ends</label>
                                                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="3:12">
                                                                <small id="emailHelp" class="form-text d-none text-danger">We'll never share your email with anyone else.</small>
                                                            </div>
                                                </div>
            
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Description</label>
                                            <textarea name="" class="form-control" id="" placeholder="Information about event"  rows="5"></textarea>
                                            <small id="emailHelp" class="form-text d-none text-danger">We'll never share your email with anyone else.</small>
                                        </div>
                                        <div class="form-group">
                                                <label for="exampleInputPassword1">Add Tags</label>
                                                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Rooftop,Live Music,Drinks,Food and Drinks,Poolside,Beach">
                                            </div>
                                            <div class="form-group">
                                                    <label for="exampleInputPassword1">Additional Info</label>
                                                    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="">
                                                </div>
            
                                    
                            </div>
            
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                    <label for="exampleInputPassword1">Upload Image/Poster</label>
                                    <div class="image-poster pointer"></div>
                                    <!-- <small id="emailHelp" class="form-text mt-2 text-right text-danger">Upload image</small> -->
                                </div>
            
                        </div>
            
                    </div>

                    <h4 class="mt-5 mb-4 section-title">Organiser</h4>
                    <div class="row">
                        <div class="col-12 col-md-6">
                                
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Name</label>
                                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Echo House">
                                    </div>
        
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Facebook</label>
                                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="facebook.com/ ">
                                    </div>
                                   
                                
                                
                              
            

                        </div>

                        <div class="col-12 col-md-6">
                                <div class="form-group">
                                        <label for="exampleInputPassword1">Twitter</label>
                                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="twitter.com/  ">
                                    </div>
                                    <div class="form-group">
                                            <label for="exampleInputPassword1">Instagram</label>
                                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="instagram.com/ ">
                                        </div>
                        </div>

                    </div>
            
                    <div class="my-5 text-center">
                            <a href="single-event.html" target="_blank"  class="btn btn-outline-primary mr-3">Preview</a>
                        <a href="single-event.html" class="btn btn-primary text-light">Publish</a>
                    </div>
                    
                </form>
        </div>
</div>


{% endblock %}

{% block scripts %} 
<script>
    $( ".event_range" ).hide();
    $(document).ready(function(){

      

        var selected =  $( ".event_date" ).val();

        $( ".event_date" ).change(function(){
            var selected = $(this).val();
            //   alert(selected);
            if (selected == 'range'){
                // alert("hey");
                $( ".event_date" ).hide();
                $( ".event_range" ).fadeIn('slow');
            }
        });
        



    });
</script>

{% endblock %}